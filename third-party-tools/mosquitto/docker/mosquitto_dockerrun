#-p 2000:1883 bind du port 1883 du container sur le port 200 de l'host
docker run \
        -v /etc/localtime:/etc/localtime:ro \
        -v /etc/timezone:/etc/timezone:ro \
        --name mosquitto \
		--network automationserver-network \
        -h docker-mosquitto \
        -v /home/fred/applications/mosquitto:/mosquitto/log \        
        -d \
        --restart=always \
        -p 1883:1883 \
        guiet/mosquitto:1.4.15


docker run -d \
	-p 1880:1880 \
        --name nodered \
        -v /home/fred/applications/node-red/data:/data \
        -e FLOWS=home_flows.json \
        --restart=always \
        -v /etc/localtime:/etc/localtime:ro \
        -v /etc/timezone:/etc/timezone:ro \
        -e TZ=Europe/Paris \
        nodered/node-red-docker:rpi-v8

